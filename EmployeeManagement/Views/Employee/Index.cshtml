@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4">
    <div class="col-6">
        <h2>List of Employees</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Create" class="btn btn-primary">
           Add Employee
        </a>
    </div>
</div>
<br />
<table class="table table-hover table-bordered table-striped" style="width:100%">
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Department</th>
            <th>Designation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var employee in Model) {
        <tr class="text-center">
            <td>
                @employee.EmpId
            </td><td>
                @employee.Name
            </td><td>
                @employee.Email
            </td><td>
                @employee.Mobile
            </td><td>
                @employee.Department?.Name
            </td><td>
                @employee.Designation?.Name
            </td>
           
            <td>
                <a type="button" class="btn btn-success" asp-action="Edit" asp-route-id="@employee.EmpId">Edit</a>
                    <button type="button" class="btn btn-danger" onclick="deletealert(@employee.EmpId)">Delete</button>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts{
    <script>
        function deletealert(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post(`/Employee/Delete?id=${id}`, function (success) {
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        )
                        location.reload(true);

                    });
                    
                }
            })
        }

    </script>
}
